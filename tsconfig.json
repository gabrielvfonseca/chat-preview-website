{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@css/*": [
        "./src/css/*"
      ],
      "@root/*": [
        "./*"
      ],
      "@fonts/*": [
        "./src/fonts/*"
      ],
      "@icons/*": [
        "./src/icons/*"
      ],
      "@utilities/*": [
        "./src/utilities/*"
      ],
      "@types": [
        "./src/types/*"
      ],
      "@lib": [
        "./src/lib/*"
      ],
      "@ui": [
        "./src/ui/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
